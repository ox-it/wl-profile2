<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--  SakaiProxy -->
 	<bean id="uk.ac.lancs.e_science.profile2.api.SakaiProxy"
    	class="uk.ac.lancs.e_science.profile2.impl.SakaiProxyImpl">
        <property name="securityService" ref="org.sakaiproject.authz.api.SecurityService" />
        <property name="sessionManager" ref="org.sakaiproject.tool.api.SessionManager" />
        <property name="siteService" ref="org.sakaiproject.site.api.SiteService" />
        <property name="toolManager" ref="org.sakaiproject.tool.api.ToolManager" />
        <property name="userDirectoryService" ref="org.sakaiproject.user.api.UserDirectoryService" />
        <property name="sakaiPersonManager" ref="org.sakaiproject.api.common.edu.person.SakaiPersonManager" />
        
	</bean>
	
	<!--  Profile plus Hibernate GlobalSessionFactory -->
	<bean id="uk.ac.lancs.e_science.profile2.api.Profile"
    	class="uk.ac.lancs.e_science.profile2.impl.ProfileImpl"
    	singleton="true">
		<property name="sessionFactory">
			<ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
		</property>
	</bean>
	
	
	<!-- Profile plus declarative transaction interceptor using the GlobalTransactionManager and mapped onto the bean above -->
	<bean id="uk.ac.lancs.e_science.profile2.api.ProfileDao"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
		</property>
		<property name="target">
		  <ref bean="uk.ac.lancs.e_science.profile2.api.Profile" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>	
	


	<!-- Hibernate mappings -->
	<bean id="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl.profile2"
    	class="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl">

	    <property name="mappingResources">
	      <list>
	        <value>
	          uk/ac/lancs/e_science/profile2/hbm/ProfileFriend.hbm.xml
	        </value>
	        <value>
	          uk/ac/lancs/e_science/profile2/hbm/ProfilePrivacy.hbm.xml
	        </value>
	        <value>
	          uk/ac/lancs/e_science/profile2/hbm/ProfileStatus.hbm.xml
	        </value>
	      </list>
	    </property>

  	</bean>
	

</beans>
