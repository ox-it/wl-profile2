<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!--  SakaiProxy -->
 	<bean id="uk.ac.lancs.e_science.profile2.api.SakaiProxy"
    	class="uk.ac.lancs.e_science.profile2.impl.SakaiProxyImpl">
        <property name="securityService" ref="org.sakaiproject.authz.api.SecurityService" />
        <property name="sessionManager" ref="org.sakaiproject.tool.api.SessionManager" />
        <property name="siteService" ref="org.sakaiproject.site.api.SiteService" />
        <property name="toolManager" ref="org.sakaiproject.tool.api.ToolManager" />
        <property name="userDirectoryService" ref="org.sakaiproject.user.api.UserDirectoryService" />
        <property name="sakaiPersonManager" ref="org.sakaiproject.api.common.edu.person.SakaiPersonManager" />
		<property name="contentHostingService"><ref bean="org.sakaiproject.content.api.ContentHostingService"/></property>
		<property name="idManager"><ref bean="org.sakaiproject.id.api.IdManager"/></property>
		<property name="eventTrackingService"><ref bean="org.sakaiproject.event.api.EventTrackingService"/></property>
		<property name="emailService"><ref bean="org.sakaiproject.email.api.EmailService"/></property>
		<property name="serverConfigurationService"><ref bean="org.sakaiproject.component.api.ServerConfigurationService"/></property>
	</bean>
	
        
	<!--  Setup the Profile IMPL as a DAO with Hibernate and give it the other beans as well  -->
	<bean id="uk.ac.lancs.e_science.profile2.api.ProfileDAO"
    	class="uk.ac.lancs.e_science.profile2.impl.ProfileImpl"
    	singleton="true"
    	init-method="init">
		<property name="sessionFactory" ref="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory" />
		<property name="sakaiProxy" ref="uk.ac.lancs.e_science.profile2.api.SakaiProxy" />
		<property name="tinyUrlService"><ref bean="org.sakaiproject.tinyurl.api.TinyUrlService"/></property>
	</bean>
	
	
	<!-- Give the DAO above the GlobalTransactionManager and call it api.Profile so we have a nice accessor -->
	<bean id="uk.ac.lancs.e_science.profile2.api.Profile"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">		
		<property name="transactionManager" ref="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
		<property name="target" ref="uk.ac.lancs.e_science.profile2.api.ProfileDAO" />
		<property name="transactionAttributes">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>	
	
	<!--  ProfileService bean for the outward facing API  -->
	<bean id="uk.ac.lancs.e_science.profile2.api.ProfileService" class="uk.ac.lancs.e_science.profile2.impl.ProfileServiceImpl">
		<property name="sakaiProxy" ref="uk.ac.lancs.e_science.profile2.api.SakaiProxy" />
		<property name="profile" ref="uk.ac.lancs.e_science.profile2.api.Profile" />
	</bean>
    
    
    <!-- EntityBroker beans -->
	<bean id="uk.ac.lancs.e_science.profile2.api.entity.ProfileEntityProvider" class="uk.ac.lancs.e_science.profile2.impl.entity.ProfileEntityProviderImpl">
		<property name="profileService" ref="uk.ac.lancs.e_science.profile2.api.ProfileService" />
	</bean>
	
	<!-- 
	<bean id="uk.ac.lancs.e_science.profile2.api.entity.FriendsEntityProvider" class="uk.ac.lancs.e_science.profile2.impl.entity.FriendsEntityProviderImpl">
		<property name="profile" ref="uk.ac.lancs.e_science.profile2.api.Profile" />
	</bean>
	-->
	

	<!-- Add our HBM files to the Sakai global session factory -->
	<bean id="uk.ac.lancs.e_science.profile2.hbm.HBMMappingList"
    	class="org.sakaiproject.springframework.orm.hibernate.impl.AdditionalHibernateMappingsImpl">

	    <property name="mappingResources">
	      <list>
	      	<value>uk/ac/lancs/e_science/profile2/hbm/ProfileStatus.hbm.xml</value>
	        <value>uk/ac/lancs/e_science/profile2/hbm/ProfilePrivacy.hbm.xml</value>
	       	<value>uk/ac/lancs/e_science/profile2/hbm/ProfileFriend.hbm.xml</value>
	       	<value>uk/ac/lancs/e_science/profile2/hbm/ProfileImage.hbm.xml</value>
	       	<value>uk/ac/lancs/e_science/profile2/hbm/SakaiPersonMeta.hbm.xml</value>
	       	<value>uk/ac/lancs/e_science/profile2/hbm/ProfilePreferences.hbm.xml</value>
	       	<value>uk/ac/lancs/e_science/profile2/hbm/ProfileImageExternal.hbm.xml</value>
	      </list>
	    </property>

  	</bean>
	

</beans>
