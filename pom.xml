<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<name>Profile2 BASE</name>
	<groupId>uk.ac.lancs.e_science</groupId>
	<artifactId>profile2-base</artifactId>
		
	<packaging>pom</packaging>
	<version>1.1-SNAPSHOT</version>
	
	<parent>
    	<artifactId>base</artifactId>
    	<groupId>org.sakaiproject</groupId>
    	<!--<version>2.5.3</version>--> <!-- For Official Releases -->    
    	<version>2.5.4</version> <!-- For 2.5.x --> 
   		<!--<version>2.7.0-SNAPSHOT</version>--> <!-- For TRUNK -->   
    	<relativePath>../pom.xml</relativePath>
  	</parent>
	
	<organization>
        <name>Lancaster University, Centre for e-Science</name>
        <url>http://e-science.lancs.ac.uk</url>
    </organization>
    
    <inceptionYear>2008</inceptionYear>
	
	<developers>
		<developer>
			<name>Steve Swinsburg</name>
			<email>s.swinsburg@lancaster.ac.uk</email>
		</developer>
		<developer>
			<name>Adrian Fish</name>
			<email>a.fish@lancaster.ac.uk</email>
		</developer>
	</developers>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	
	<repositories>
		<repository>
			<id>sakai-maven</id>
			<name>Sakai Maven Repo</name>
			<layout>default</layout>
			<url>http://source.sakaiproject.org/maven2</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
	    
    <properties>
    	<tool.version>1.1-SNAPSHOT</tool.version>
    	<wicket.version>1.3.5</wicket.version>
		<jetty.version>6.1.4</jetty.version>
    	<log4j.version>1.2.14</log4j.version>
    	<slf4j.version>1.4.2</slf4j.version>
    	<entitybroker.version>1.3.3</entitybroker.version>
    	<twitter4j.version>1.1.4</twitter4j.version>
    	<jasypt.version>1.5</jasypt.version>
    	<icu4j.version>3.8</icu4j.version>
    	<tinyurl.version>0.9-SNAPSHOT</tinyurl.version>
    </properties>
    
    <!-- Profile2 related dependencies -->
	<dependencyManagement>
		<dependencies>
			
			<!-- internal -->
			<dependency>
      			<groupId>uk.ac.lancs.e_science</groupId>
      			<artifactId>sakai-profile2-api</artifactId>
      			<version>${tool.version}</version>
      			<scope>provided</scope>
    		</dependency>
    		<dependency>
      			<groupId>uk.ac.lancs.e_science</groupId>
      			<artifactId>sakai-profile2-impl</artifactId>
      			<version>${tool.version}</version>
      			<scope>runtime</scope>
    		</dependency>
    		
    		<!-- external -->
			<dependency>
      			<groupId>net.homeip.yusuke</groupId>
      			<artifactId>twitter4j</artifactId>
      			<version>${twitter4j.version}</version>
    		</dependency>
    		<dependency>
				<groupId>org.apache.wicket</groupId>
				<artifactId>wicket</artifactId>
				<version>${wicket.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.wicket</groupId>
				<artifactId>wicket-extensions</artifactId>
				<version>${wicket.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.wicket</groupId>
				<artifactId>wicket-spring</artifactId>
				<version>${wicket.version}</version>
	    	</dependency>
	    	<dependency>
	      		<groupId>org.apache.wicket</groupId>
	      		<artifactId>wicket-spring-annot</artifactId>
	      		<version>${wicket.version}</version>
	    	</dependency>
	    	<dependency>
	      		<groupId>org.jasypt</groupId>
	      		<artifactId>jasypt</artifactId>
	      		<version>${jasypt.version}</version>
	    	</dependency>
	    	<dependency>
				<groupId>com.ibm.icu</groupId>
				<artifactId>icu4j</artifactId>
				<version>${icu4j.version}</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-log4j12</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			<dependency>
				<groupId>log4j</groupId>
				<artifactId>log4j</artifactId>
				<version>${log4j.version}</version>
			</dependency>
			<dependency>
      			<groupId>org.sakaiproject</groupId>
      			<artifactId>sakai-tinyurl-api</artifactId>
     			<version>${tinyurl.version}</version>
				<scope>provided</scope>
   			</dependency>
  	
    	</dependencies>
    </dependencyManagement>

 	<modules>
	    <module>api</module>
	    <module>impl</module>
	    <module>pack</module>
	    <module>tool</module>
	</modules>
       
    <profiles>
        <profile>
            <id>pre-K1</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>K1</id>
        </profile>
    </profiles>
    
    <issueManagement>
        <system>JIRA</system>
        <url>http://jira.sakaiproject.org/jira/browse/PRFL</url>
    </issueManagement>
    
    
</project>