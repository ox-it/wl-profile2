<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.sakaiproject.profile2.model">

	<class name="Wall" table="PROFILE_WALLS_T">
		<!--
			use the userUuid as the primary key directly since there will only
			ever be one wall per user
		-->
		<id name="userUuid" column="USER_UUID" length="99" unsaved-value="0">
			<generator class="assigned" />
		</id>

		<!-- cascade to save wall items in PROFILE_WALL_ITEMS_T -->
		<!-- use PROFILE_WALL_ITEMS_MAP_T for unidirectional many-to-many -->
		<bag name="wallItems" table="PROFILE_WALL_ITEMS_MAP_T" lazy="false"
			cascade="all">
			<key column="USER_UUID" />
			<many-to-many column="WALL_ITEM_ID" class="org.sakaiproject.profile2.model.WallItem" />
		</bag>
		
	</class>

	<!-- get wall -->
	<query name="getWall">
    	<![CDATA[from Wall wall WHERE wall.userUuid = :userUuid]]>
	</query>

</hibernate-mapping>
