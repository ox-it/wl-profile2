<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="org.sakaiproject.api.app.profile.ProfileManager"
        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
	    <property name="transactionManager">
	      <ref bean="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager" />
	    </property>
	    <property name="transactionAttributes">
	      <props>
	        <prop key="*">PROPAGATION_REQUIRED</prop>
	      </props>
	    </property>
	    <property name="target">
	    	<bean class="org.sakaiproject.component.app.profile.ProfileManagerImpl" init-method="init">
		        <property name="sakaiPersonManager">
		            <ref bean="org.sakaiproject.api.common.edu.person.SakaiPersonManager"/>
		        </property>
		        <property name="userDirectoryService">
		            <ref bean="org.sakaiproject.user.api.UserDirectoryService"/>
		        </property>
		        <property name="serverConfigurationService">
		        	<ref bean="org.sakaiproject.component.api.ServerConfigurationService"/>
		        </property>
		        
		        <!-- Profile2 additions -->
		        <property name="profileImageService">
		        	<ref bean="org.sakaiproject.profile2.service.ProfileImageService"/>
		        </property>
		        <property name="profilePrivacyService">
		        	<ref bean="org.sakaiproject.profile2.service.ProfilePrivacyService"/>
		        </property>
		        <property name="sakaiProxy">
		        	<ref bean="org.sakaiproject.profile2.logic.SakaiProxy"/>
		        </property>
	    	</bean>
	    </property>
	</bean>
</beans>
